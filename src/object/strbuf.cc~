#include "object/strbuf.h"

Stringbuffer::Stringbuffer() {
	//buf[0] = '\0';
	pos = 0;
}

Stringbuffer::~Stringbuffer() {

}

void Stringbuffer::put(char c) {
	buf[pos++] = c;
	if(pos == BUFFERSIZE-1)
		flush();
}
 
